{
  "compilerOptions": {
    "target": "ES2016",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["./generated/typings.ts", "../node_modules/@types"]
  },
  "include": [
    "./src",
    "./generated/typings.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
